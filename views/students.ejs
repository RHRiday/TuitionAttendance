<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tuition Attendance</title>
  <meta charset="utf-8">
  <script src="https://kit.fontawesome.com/43b42e8e8a.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
  <div class="c-table">
    <div class="center">
      <h2>Attendance data</h2>
    </div>
    <table>
      <tr>
        <th class="th">Name of the student: </th>
        <td><td><%= name %></td></td>
      </tr>
      <tr>
        <th class="th">Started: </th>
        <td><td><%= startDate[0] %></td></td>
      </tr>
      <tr>
        <th class="th">Total attendance:</th>
        <td><td><%= info.length %></td></td>
      </tr>
      <tr>
        <th class="th" rowspan="<%= payDates.length %>">Payment Dates:</th>
        <td><td><%= payDates[0] %></td></td>
      </tr>
      <% if(payDates.length > 1){ %>
        <% for(i=1; i<payDates.length; i++){ %>
            <tr>
              <td><td><%= payDates[i] %></td></td>
            </tr>
      <% }} %>
    </table>
  </div>
  <div class="table-div">
    <div class="center">
      <h1><%= name %>'s Attendance sheet</h1>
    </div>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Name of the Student</th>
          <th scope="col">Attendance</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <% info.forEach(function(entry){ %>
      <tr>
        <td><%= entry.name %></td>
        <td><%= entry.date %></td>
        <td>
          <div>
            <button id="<%= entry._id %>" class="btn btn-danger" onclick="findMe(this.id)">Delete</button>
            <form action="/action" data-formId="<%= entry._id %>" class="actionForm">
              <input type="text" name="validation" placeholder="Your identity?">
              <input type="hidden" name="objId" value="<%= entry._id %>">
              <input type="submit" class="btn btn-danger" value="Delete" autocomplete="off">
            </form>
          </div>
        </td>
      </tr>
      <% }); %>
    </table>
    <hr>
    <button type="button" class="btn btn-dark" onclick="window.history.back()"><i class="fas fa-reply"></i> Back</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script type="text/javascript">
      function findMe(e){
        $(`#${CSS.escape(e)}`).hide();
        $(`[data-formId=${CSS.escape(e)}]`).show();
      }
  </script>
</body>

</html>
